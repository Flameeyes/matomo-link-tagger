{
  "name": "link-tagger",
  "version": "0.0.0",
  "description": "Link Tagger for Matomo",
  "keywords": [
    "matomo"
  ],
  "author": "Diego Elio Petten√≤",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Flameeyes/matomo-link-tagger.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "autoprefixer": "^10.4.14",
    "babel-preset-minify": "^0.5.2",
    "bulma": "^0.9.4",
    "eslint": "^8.51.0",
    "eslint-plugin-react": "^7.33.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "sass": "^1.63.6"
  },
  "scripts": {
    "css-deploy": "npm run css-build && npm run css-postcss",
    "css-build": "sass --no-source-map _sass/main.scss:public/css/main.css",
    "css-postcss": "postcss --use autoprefixer --output public/css/main.css public/css/main.css",
    "css-watch": "npm run css-build -- --watch",
    "deploy": "npm run css-deploy && npm run js-build",
    "js-build": "babel _javascript --out-dir public",
    "js-watch": "npm run js-build -- --watch",
    "start": "npm-run-all --parallel css-watch js-watch"
  }
}
